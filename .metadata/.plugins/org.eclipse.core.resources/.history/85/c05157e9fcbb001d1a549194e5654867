package dicegame;

import java.util.Scanner;

public class Game {
	public void game() {
		Dice d = new Dice();
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			int sum1 = 0;
			int sum2 = 0;
			int p1 = d.roll();
			int p2 = d.roll();
			System.out.printf("1번째 플레이어의 주사위 : %d, 2번째 플레이어의 주사위 : %d\n",p1,p2);
			sum1 += p1;
			sum2 += p2;
			if(p1 >= 20 && p2 >= 20) {
				
				break;
			}
		}
	}
}
