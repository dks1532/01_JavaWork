package dicegame;

import java.util.Scanner;

public class Game {
	public void game() {
		Dice d = new Dice();
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			int p1 = d.roll();
			int p2 = d.roll();
			System.out.printf("1번째 플레이어의 주사위 : %d\n2번째 플레이어의 주사위 : %d\n계속하려면 엔터를 입력하세요",p1,p2);
			sc.nextLine();
		}
	}
}
