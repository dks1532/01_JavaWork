package messenger2;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Scanner;

public class ServerProgram {

	public static void main(String[] args) {
		int port = 3005;
		Scanner sc = new Scanner(System.in);
		
		BufferedReader br = null;	// ì…ë ¥ìš© ìŠ¤íŠ¸ë¦¼
		PrintWriter pw = null;	// ì¶œë ¥ìš© ìŠ¤íŠ¸ë¦¼
		
		try {
			// 2. ServerSocket ê°ì²´ ìƒì„±ì‹œ í¬íŠ¸ ê²°í•©
			try(ServerSocket server = new ServerSocket(port)) {
			
			// 3. í´ë¼ì´ì–¸íŠ¸ë¡œë¶€í„° ì—°ê²° ìš”ì²­ì´ ì˜¤ë©´ ìˆ˜ë½í•˜ê³ , í†µì‹ í•  ìˆ˜ ìˆëŠ” ì†Œì¼“ ê°ì²´ ìƒì„±
			System.out.println("í´ë¼ì´ì–¸íŠ¸ì˜ ìš”ì²­ì„ ê¸°ë‹¤ë¦¬ê³  ìˆìŒ...");
			Socket socket = server.accept();
			System.out.println(socket.getInetAddress().getHostAddress() + "ê°€ ì—°ê²°ì„ ìš”ì²­í•¨!!!");
			
			// 5. ë³´ì¡° ìŠ¤íŠ¸ë¦¼(ê¸°ë°˜ìŠ¤íŠ¸ë¦¼ì„ ì¸ìˆ˜ë¡œ ë„£ìŒ)
			// br = new BufferedReader(new InputStreamReader(is));
			br = new BufferedReader(new InputStreamReader(socket.getInputStream()));	// ì…ë ¥
			pw = new PrintWriter(socket.getOutputStream());								// ì¶œë ¥
			
			pw.println("í™˜ì˜í•©ë‹ˆë‹¤ğŸ’Œ");		
			pw.flush();		// í˜„ì¬ ë²„í¼ìˆëŠ” ìŠ¤íŠ¸ë¦¼ì„ ê°•ì œë¡œ ë³´ë‚´ê³  ë²„í¼ë¥¼ ë¹„ì›€
			
			while(true) {
				// í´ë¼ì´ì–¸íŠ¸ ì¸¡ìœ¼ë¡œë¶€í„° ë°›ì€ ë©”ì‹œì§€
				System.out.println("í´ë¼ì´ì–¸íŠ¸ : " + br.readLine());
				
				// ì„œë²„ì—ì„œ í´ë¼ì´ì–¸íŠ¸ ì¸¡ìœ¼ë¡œ ë³´ë‚´ëŠ” ë©”ì‹œì§€
				System.out.println("ì„œë²„ : ");
				pw.println(sc.nextLine());
				pw.flush();
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
}
